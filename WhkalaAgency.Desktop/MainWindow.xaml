<Window x:Class="WhkalaAgency.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:WhkalaAgency.Desktop.Views"
        Title="نظام إدارة وكالة الخضار والفاكهة"
        Height="650" Width="1050"
        WindowStartupLocation="CenterScreen"
        FlowDirection="RightToLeft"
        Background="#F3F6FB"
        FontFamily="Segoe UI">

    <DockPanel>

        <!-- Top Bar -->
        <Grid DockPanel.Dock="Top" Height="56" Background="#2D6A4F">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="نظام إدارة وكالة الخضار والفاكهة"
                       Foreground="White"
                       VerticalAlignment="Center"
                       Margin="15,0"
                       FontSize="18"
                       FontWeight="Bold"/>

            <StackPanel Orientation="Horizontal" Grid.Column="1" VerticalAlignment="Center" Margin="0,0,15,0">
                <TextBlock x:Name="CurrentUserTextBlock"
                           Foreground="White"
                           Margin="0,0,15,0"
                           FontWeight="SemiBold"/>
                <Button Content="تسجيل الخروج"
                        Width="110"
                        Height="36"
                        Margin="0,0,5,0"
                        Background="#ECF0F1"
                        Foreground="#2C3E50"
                        BorderThickness="0"
                        Cursor="Hand"
                        FontWeight="SemiBold"
                        Padding="5"
                        Click="Logout_Click"/>
                <Button Content="إغلاق"
                        Width="90"
                        Height="36"
                        Background="#ECF0F1"
                        Foreground="#2C3E50"
                        BorderThickness="0"
                        Cursor="Hand"
                        FontWeight="SemiBold"
                        Padding="5"
                        Click="Exit_Click"/>
            </StackPanel>
        </Grid>

        <!-- Sidebar -->
        <StackPanel DockPanel.Dock="Right" Width="220" Background="#FFFFFF" >
            <Button Content="لوحة التحكم" Height="42" Margin="10" Background="#F7F9FC" BorderThickness="0" Cursor="Hand" Click="Dashboard_Click"/>
            <Button Content="إدارة الأصناف" Height="42" Margin="10" Background="#F7F9FC" BorderThickness="0" Cursor="Hand" Click="Products_Click"/>
            <Button Content="إدارة المزارعين" Height="42" Margin="10" Background="#F7F9FC" BorderThickness="0" Cursor="Hand" Click="Farmers_Click"/>
            <Button Content="إدارة التجار" Height="42" Margin="10" Background="#F7F9FC" BorderThickness="0" Cursor="Hand" Click="Traders_Click"/>
            <Separator Margin="10"/>
            <Button Content="تسجيل توريد" Height="42" Margin="10" Background="#F7F9FC" BorderThickness="0" Cursor="Hand" Click="Supply_Click"/>
            <Button Content="تسجيل بيع" Height="42" Margin="10" Background="#F7F9FC" BorderThickness="0" Cursor="Hand" Click="Sale_Click"/>
            <Separator Margin="10"/>
            <Button Content="التقارير" Height="42" Margin="10" Background="#F7F9FC" BorderThickness="0" Cursor="Hand" Click="Reports_Click"/>
            <Separator Margin="10"/>
            <Button x:Name="UsersButton" Content="إدارة المستخدمين" Height="42" Margin="10" Background="#F7F9FC" BorderThickness="0" Cursor="Hand" Click="Users_Click"/>
            <Button Content="إعدادات" Height="42" Margin="10" Background="#F7F9FC" BorderThickness="0" Cursor="Hand" Click="Settings_Click"/>
        </StackPanel>

        <!-- Main Content -->
        <Border Margin="10" Background="White" CornerRadius="12" 
                Effect="{DynamicResource DropShadowEffect}">
            <ContentControl x:Name="MainContent" Margin="15"/>
        </Border>

    </DockPanel>

    <!-- Shadow Effect Resource -->
    <Window.Resources>
        <DropShadowEffect x:Key="DropShadowEffect"
                          BlurRadius="12"
                          ShadowDepth="2"
                          Opacity="0.1"/>
    </Window.Resources>
</Window>