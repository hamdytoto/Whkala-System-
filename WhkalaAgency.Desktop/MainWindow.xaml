<Window x:Class="WhkalaAgency.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="نظام إدارة الوكالة الذكي"
        Height="900"
        Width="1400"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        FlowDirection="RightToLeft"
        Background="#F2F6FB"
        FontFamily="Segoe UI">

    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryBlue" Color="#1D4ED8"/>
        <SolidColorBrush x:Key="SidebarText" Color="#4A5A70"/>

        <Style x:Key="SidebarFooterButton" TargetType="Button">
            <Setter Property="HorizontalContentAlignment" Value="Right"/>
            <Setter Property="Padding" Value="14,10"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Root" Background="{TemplateBinding Background}" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Right" VerticalAlignment="Center" Margin="2,0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Root" Property="Background" Value="#EDF4FF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="NavButtonStyle" TargetType="RadioButton">
            <Setter Property="Height" Value="50"/>
            <Setter Property="Margin" Value="14,3"/>
            <Setter Property="GroupName" Value="MainNavigation"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="{StaticResource SidebarText}"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Grid>
                            <Border x:Name="border" CornerRadius="11" Background="Transparent" BorderBrush="Transparent" BorderThickness="1">
                                <StackPanel Orientation="Horizontal" Margin="14,0" VerticalAlignment="Center">
                                    <TextBlock x:Name="icon"
                                               Text="{TemplateBinding Tag}"
                                               FontFamily="Segoe MDL2 Assets"
                                               FontSize="16"
                                               Margin="0,0,10,0"
                                               VerticalAlignment="Center"
                                               Foreground="{StaticResource SidebarText}"/>
                                    <ContentPresenter VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                            <Border x:Name="indicator"
                                    HorizontalAlignment="Right"
                                    Width="4"
                                    Height="22"
                                    Background="{StaticResource PrimaryBlue}"
                                    CornerRadius="2"
                                    Visibility="Collapsed"
                                    Margin="0,0,-14,0"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#EEF4FF"/>
                                <Setter TargetName="icon" Property="Foreground" Value="{StaticResource PrimaryBlue}"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#E7F0FF"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#CFE0FF"/>
                                <Setter TargetName="icon" Property="Foreground" Value="{StaticResource PrimaryBlue}"/>
                                <Setter Property="Foreground" Value="{StaticResource PrimaryBlue}"/>
                                <Setter TargetName="indicator" Property="Visibility" Value="Visible"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="292"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="White" BorderBrush="#E2EAF4" BorderThickness="0,0,1,0">
            <DockPanel>
                <StackPanel DockPanel.Dock="Top" Margin="24,26,24,24">
                    <Border Height="96" CornerRadius="14" Padding="16,14">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#1E3A8A" Offset="0"/>
                                <GradientStop Color="#1D4ED8" Offset="0.6"/>
                                <GradientStop Color="#2563EB" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border Width="44" Height="44" CornerRadius="12" Background="#FFFFFF2E" HorizontalAlignment="Right">
                                <TextBlock Text="W" Foreground="White" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel Grid.Column="1" Margin="12,0,0,0" VerticalAlignment="Center">
                                <TextBlock Text="الوكالة الذكية" FontSize="22" FontWeight="Bold" Foreground="White"/>
                                <TextBlock Text="إدارة المخزون والمالية" FontSize="12" Foreground="#D6E4FF" Margin="0,4,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </StackPanel>

                <StackPanel DockPanel.Dock="Bottom" Margin="14,0,14,24">
                    <Separator Background="#F0F4FA" Margin="10,10"/>
                    <Button Content="الإعدادات"
                            Click="Settings_Click"
                            Style="{StaticResource SidebarFooterButton}"
                            Foreground="#4A5A70"/>
                    <Button Content="تسجيل الخروج"
                            Click="Exit_Click"
                            Style="{StaticResource SidebarFooterButton}"
                            Foreground="#C53030"
                            FontWeight="Bold"/>
                </StackPanel>

                <ScrollViewer VerticalScrollBarVisibility="Hidden">
                    <StackPanel Margin="0,4,0,8">
                        <RadioButton Content="لوحة التحكم"
                                     Tag="&#xE80F;"
                                     IsChecked="True"
                                     Style="{StaticResource NavButtonStyle}"
                                     Click="Dashboard_Click"/>

                        <RadioButton Content="الأصناف والمنتجات"
                                     Tag="&#xEC25;"
                                     Style="{StaticResource NavButtonStyle}"
                                     Click="Products_Click"/>
                        <RadioButton Content="حسابات المزارعين"
                                     Tag="&#xE77B;"
                                     Style="{StaticResource NavButtonStyle}"
                                     Click="Farmers_Click"/>
                        <RadioButton Content="سجل التجار"
                                     Tag="&#xE14C;"
                                     Style="{StaticResource NavButtonStyle}"
                                     Click="Traders_Click"/>

                        <RadioButton Content="توريد محاصيل"
                                     Tag="&#xE81C;"
                                     Style="{StaticResource NavButtonStyle}"
                                     Click="Supply_Click"/>
                        <RadioButton Content="فواتير المبيعات"
                                     Tag="&#xE8C7;"
                                     Style="{StaticResource NavButtonStyle}"
                                     Click="Sale_Click"/>

                        <RadioButton x:Name="UsersButton"
                                     Content="إدارة المستخدمين"
                                     Tag="&#xE716;"
                                     Style="{StaticResource NavButtonStyle}"
                                     Click="Users_Click"/>
                    </StackPanel>
                </ScrollViewer>
            </DockPanel>
        </Border>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="84"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="White" Padding="30,0" BorderBrush="#E2EAF4" BorderThickness="0,0,0,1">
                <DockPanel VerticalAlignment="Center">
                    <StackPanel DockPanel.Dock="Right">
                        <TextBlock x:Name="CurrentUserTextBlock"
                                   Text="مرحبا، أحمد ممدوح"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="#1F2A3A"/>
                        <TextBlock Text="مدير النظام"
                                   FontSize="12"
                                   Foreground="#72839A"
                                   HorizontalAlignment="Right"/>
                    </StackPanel>

                    <Border DockPanel.Dock="Left" Background="#F5F8FD" BorderBrush="#E2EAF4" BorderThickness="1" CornerRadius="10" Padding="12,6">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE787;" FontFamily="Segoe MDL2 Assets" Margin="0,0,8,0" VerticalAlignment="Center" Foreground="#4A5A70"/>
                            <TextBlock x:Name="DateTimeTextBlock"
                                       Text="4 فبراير، 2026"
                                       FontSize="13"
                                       Foreground="#4A5A70"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </DockPanel>
            </Border>

            <Border Grid.Row="1" Margin="22" Background="White" CornerRadius="18" BorderBrush="#E2EAF4" BorderThickness="1">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="24" Opacity="0.07" ShadowDepth="2" Color="#182A45"/>
                </Border.Effect>
                <ContentControl x:Name="MainContent"/>
            </Border>
        </Grid>
    </Grid>
</Window>
