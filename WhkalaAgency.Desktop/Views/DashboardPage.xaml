<UserControl x:Class="WhkalaAgency.Desktop.Views.DashboardPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             FlowDirection="RightToLeft">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="لوحة التحكم" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

        <UniformGrid Grid.Row="1" Columns="2" Rows="2" Margin="0,10,0,0">
            <Border Margin="5" Padding="10" Background="#EDF6F9" CornerRadius="6">
                <StackPanel>
                    <TextBlock Text="مبيعات اليوم" FontWeight="Bold"/>
                    <TextBlock x:Name="TodaySalesText" FontSize="18" FontWeight="Bold" Foreground="#1D3557"/>
                </StackPanel>
            </Border>
            <Border Margin="5" Padding="10" Background="#FFE5EC" CornerRadius="6">
                <StackPanel>
                    <TextBlock Text="عمولة اليوم" FontWeight="Bold"/>
                    <TextBlock x:Name="TodayCommissionText" FontSize="18" FontWeight="Bold" Foreground="#E63946"/>
                </StackPanel>
            </Border>
            <Border Margin="5" Padding="10" Background="#E9F5DB" CornerRadius="6">
                <StackPanel>
                    <TextBlock Text="إجمالي مديونيات التجار" FontWeight="Bold"/>
                    <TextBlock x:Name="TotalTraderDebtsText" FontSize="18" FontWeight="Bold" Foreground="#2D6A4F"/>
                </StackPanel>
            </Border>
            <Border Margin="5" Padding="10" Background="#FFF3B0" CornerRadius="6">
                <StackPanel>
                    <TextBlock Text="ملخص المخزون (إجمالي الكميات)" FontWeight="Bold"/>
                    <TextBlock x:Name="TotalStockText" FontSize="18" FontWeight="Bold" Foreground="#6A4C93"/>
                </StackPanel>
            </Border>
        </UniformGrid>
    </Grid>
</UserControl>

