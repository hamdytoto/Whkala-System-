<UserControl x:Class="WhkalaAgency.Desktop.Views.DashboardPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             FlowDirection="RightToLeft">

    <UserControl.Resources>
        <DropShadowEffect x:Key="CardShadow" BlurRadius="18" Opacity="0.08" ShadowDepth="2" Color="#1E2A3A"/>

        <Style x:Key="MetricCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="14"/>
            <Setter Property="Padding" Value="18"/>
            <Setter Property="Margin" Value="7"/>
            <Setter Property="BorderBrush" Value="#E6EBF2"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Effect" Value="{StaticResource CardShadow}"/>
        </Style>

        <Style x:Key="PanelCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="BorderBrush" Value="#E6EBF2"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Effect" Value="{StaticResource CardShadow}"/>
        </Style>
    </UserControl.Resources>

    <Grid Background="#F2F6FB" Margin="18">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" CornerRadius="15" Padding="22,16" Margin="0,0,0,16">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#1E3A8A" Offset="0"/>
                    <GradientStop Color="#1D4ED8" Offset="0.58"/>
                    <GradientStop Color="#2563EB" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <DockPanel>
                <StackPanel DockPanel.Dock="Right">
                    <TextBlock Text="لوحة التحكم الرئيسية" FontSize="30" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="مرحباً بك مجدداً.. إليك تحديثات الوكالة اليوم" FontSize="14" Foreground="#D9E6FF" Margin="2,5,0,0"/>
                </StackPanel>

                <Button Content="تحديث البيانات"
                        HorizontalAlignment="Left"
                        Padding="16,8"
                        Margin="8,0"
                        Background="#FFFFFF"
                        BorderBrush="#D9E6FF"
                        Cursor="Hand"
                        FontWeight="SemiBold"
                        VerticalAlignment="Center"/>
            </DockPanel>
        </Border>

        <UniformGrid Grid.Row="1" Columns="4" Margin="-7,0,-7,14">
            <Border Style="{StaticResource MetricCardStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <TextBlock Text="مبيعات اليوم" FontSize="13" FontWeight="SemiBold" Foreground="#6B7A90"/>
                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                            <TextBlock x:Name="TodaySalesText" Text="0.00" FontSize="26" FontWeight="Bold" Foreground="#1F2A3A"/>
                            <TextBlock Text=" ج.م" FontSize="13" Foreground="#6B7A90" Margin="4,0,0,6" VerticalAlignment="Bottom"/>
                        </StackPanel>
                    </StackPanel>
                    <Border Grid.Column="1" Width="42" Height="42" CornerRadius="12" Background="#E8F5E9" VerticalAlignment="Top">
                        <TextBlock Text="&#xEAFD;" FontFamily="Segoe MDL2 Assets" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#1F8A5B"/>
                    </Border>
                </Grid>
            </Border>

            <Border Style="{StaticResource MetricCardStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <TextBlock Text="عمولة اليوم" FontSize="13" FontWeight="SemiBold" Foreground="#6B7A90"/>
                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                            <TextBlock x:Name="TodayCommissionText" Text="0.00" FontSize="26" FontWeight="Bold" Foreground="#D97706"/>
                            <TextBlock Text=" ج.م" FontSize="13" Foreground="#6B7A90" Margin="4,0,0,6" VerticalAlignment="Bottom"/>
                        </StackPanel>
                    </StackPanel>
                    <Border Grid.Column="1" Width="42" Height="42" CornerRadius="12" Background="#FFF3E0" VerticalAlignment="Top">
                        <TextBlock Text="&#xE9D2;" FontFamily="Segoe MDL2 Assets" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#D97706"/>
                    </Border>
                </Grid>
            </Border>

            <Border Style="{StaticResource MetricCardStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <TextBlock Text="مديونيات التجار" FontSize="13" FontWeight="SemiBold" Foreground="#6B7A90"/>
                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                            <TextBlock x:Name="TotalTraderDebtsText" Text="0" FontSize="26" FontWeight="Bold" Foreground="#C53030"/>
                            <TextBlock Text=" ج.م" FontSize="13" Foreground="#6B7A90" Margin="4,0,0,6" VerticalAlignment="Bottom"/>
                        </StackPanel>
                    </StackPanel>
                    <Border Grid.Column="1" Width="42" Height="42" CornerRadius="12" Background="#FFEBEE" VerticalAlignment="Top">
                        <TextBlock Text="&#xE9D9;" FontFamily="Segoe MDL2 Assets" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#C53030"/>
                    </Border>
                </Grid>
            </Border>

            <Border Style="{StaticResource MetricCardStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <TextBlock Text="إجمالي الطرود" FontSize="13" FontWeight="SemiBold" Foreground="#6B7A90"/>
                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                            <TextBlock x:Name="TotalStockText" Text="0" FontSize="26" FontWeight="Bold" Foreground="#1D4ED8"/>
                            <TextBlock Text=" طرد" FontSize="13" Foreground="#6B7A90" Margin="4,0,0,6" VerticalAlignment="Bottom"/>
                        </StackPanel>
                    </StackPanel>
                    <Border Grid.Column="1" Width="42" Height="42" CornerRadius="12" Background="#E3F2FD" VerticalAlignment="Top">
                        <TextBlock Text="&#xED0C;" FontFamily="Segoe MDL2 Assets" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#1D4ED8"/>
                    </Border>
                </Grid>
            </Border>
        </UniformGrid>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Margin="0,0,10,0" Style="{StaticResource PanelCardStyle}">
                <DockPanel>
                    <Grid DockPanel.Dock="Top" Margin="0,0,0,16">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <TextBlock Text="تحليلات المبيعات" FontSize="20" FontWeight="Bold" Foreground="#1F2A3A"/>
                            <TextBlock Text="(آخر 7 أيام)" FontSize="13" Foreground="#8B97A8" Margin="8,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                        <ComboBox HorizontalAlignment="Left" Width="108" SelectedIndex="0" Height="32">
                            <ComboBoxItem Content="أسبوعي"/>
                            <ComboBoxItem Content="شهري"/>
                        </ComboBox>
                    </Grid>

                    <Grid x:Name="SalesChartHost" VerticalAlignment="Stretch">
                        <TextBlock Text="لا توجد بيانات كافية للعرض حالياً"
                                   Foreground="#C8CFD9"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Visibility="Collapsed"/>
                    </Grid>
                </DockPanel>
            </Border>

            <Border Grid.Column="1" Margin="10,0,0,0" Style="{StaticResource PanelCardStyle}">
                <DockPanel>
                    <TextBlock DockPanel.Dock="Top"
                               Text="توزيع العمولات"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="#1F2A3A"
                               Margin="0,0,0,16"
                               HorizontalAlignment="Right"/>
                    <Grid x:Name="CommissionChartHost"/>
                </DockPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
