<Window x:Class="WhkalaAgency.Desktop.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="تسجيل الدخول - نظام الوكالة"
        Height="380" Width="460"
        WindowStartupLocation="CenterScreen"
        FlowDirection="RightToLeft"
        ResizeMode="NoResize"
        Background="#F3F6FB">

    <Grid>
        <Border
            Width="400"
            Padding="25"
            CornerRadius="12"
            Background="White"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Effect="{DynamicResource ShadowEffect}">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Title -->
                <StackPanel Margin="0,0,0,20" HorizontalAlignment="Center">
                    <TextBlock Text="نظام الوكالة"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="#2C3E50"
                               HorizontalAlignment="Center"/>

                    <TextBlock Text="تسجيل الدخول"
                               FontSize="14"
                               Foreground="#7F8C8D"
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Form -->
                <StackPanel Grid.Row="1">
                    <TextBlock Text="اسم المستخدم" Margin="0,0,0,6"/>
                    <TextBox x:Name="UsernameTextBox"
                             Height="38"
                             FontSize="14"
                             Padding="10"
                             Background="#F7F9FC"
                             BorderBrush="#DADFE6"
                             BorderThickness="1"
                             Margin="0,0,0,14"/>

                    <TextBlock Text="كلمة المرور" Margin="0,0,0,6"/>
                    <PasswordBox x:Name="PasswordBox"
                                 Height="38"
                                 FontSize="14"
                                 Padding="10"
                                 Background="#F7F9FC"
                                 BorderBrush="#DADFE6"
                                 BorderThickness="1"/>

                    <TextBlock x:Name="ErrorTextBlock"
                               Foreground="#E74C3C"
                               Margin="0,12,0,0"
                               FontSize="13"
                               TextWrapping="Wrap"/>
                </StackPanel>

                <!-- Buttons -->
                <StackPanel Grid.Row="2"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,20,0,0">

                    <Button Content="دخول"
                            Width="150"
                            Height="42"
                            Margin="5"
                            Background="#2E86DE"
                            Foreground="White"
                            FontWeight="SemiBold"
                            BorderThickness="0"
                            Click="Login_Click"/>

                    <Button Content="إغلاق"
                            Width="120"
                            Height="42"
                            Margin="5"
                            Background="#ECF0F1"
                            Foreground="#2C3E50"
                            BorderThickness="0"
                            Click="Exit_Click"/>
                </StackPanel>

            </Grid>
        </Border>
    </Grid>

    <!-- Shadow -->
    <Window.Resources>
        <DropShadowEffect x:Key="ShadowEffect"
                          Color="#000"
                          BlurRadius="15"
                          ShadowDepth="0"
                          Opacity="0.15"/>
    </Window.Resources>

</Window>