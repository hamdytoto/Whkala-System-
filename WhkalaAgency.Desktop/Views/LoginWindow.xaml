<Window x:Class="WhkalaAgency.Desktop.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="تسجيل الدخول - نظام الوكالة"
        Height="420" Width="780"
        MinHeight="420" MinWidth="780"
        WindowStartupLocation="CenterScreen"
        FlowDirection="RightToLeft"
        ResizeMode="NoResize"
        Background="#EEF3FA">

    <Window.Resources>
        <DropShadowEffect x:Key="CardShadow" Color="#0F172A" BlurRadius="24" ShadowDepth="4" Opacity="0.16"/>

        <Style x:Key="LoginFieldStyle" TargetType="TextBox">
            <Setter Property="Height" Value="44"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="Background" Value="#FAFCFF"/>
            <Setter Property="BorderBrush" Value="#D7E1EE"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style x:Key="LoginPasswordStyle" TargetType="PasswordBox">
            <Setter Property="Height" Value="44"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="Background" Value="#FAFCFF"/>
            <Setter Property="BorderBrush" Value="#D7E1EE"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style x:Key="SecondaryActionButton" TargetType="Button">
            <Setter Property="Height" Value="44"/>
            <Setter Property="Width" Value="118"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Background" Value="#F8FAFD"/>
            <Setter Property="Foreground" Value="#1F2A3A"/>
            <Setter Property="BorderBrush" Value="#D7E0EC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#EEF4FB"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#E6EDF8"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#F4F8FF" Offset="0"/>
                <GradientStop Color="#EAF1FB" Offset="0.6"/>
                <GradientStop Color="#E3EBF7" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Border Width="700"
                Height="340"
                CornerRadius="16"
                Background="White"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Effect="{StaticResource CardShadow}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.05*"/>
                    <ColumnDefinition Width="1.35*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="1" CornerRadius="16,0,0,16">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#1E3A8A" Offset="0"/>
                            <GradientStop Color="#1D4ED8" Offset="0.55"/>
                            <GradientStop Color="#2563EB" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <StackPanel Margin="34" VerticalAlignment="Center">
                        <TextBlock Text="نظام الوكالة" FontSize="34" FontWeight="Bold" Foreground="White"/>
                        <TextBlock Text="حل موحد لإدارة المزارعين والتجار والمخزون"
                                   Margin="0,10,0,0"
                                   FontSize="14"
                                   Foreground="#DCE8FF"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <StackPanel Grid.Column="0" Margin="28" VerticalAlignment="Center">
                    <TextBlock Text="تسجيل الدخول"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="#1F2A3A"
                               Margin="0,0,0,16"/>

                    <TextBlock Text="اسم المستخدم" Margin="0,0,0,6" Foreground="#4B5A70" FontWeight="SemiBold"/>
                    <TextBox x:Name="UsernameTextBox" Style="{StaticResource LoginFieldStyle}" Margin="0,0,0,12"/>

                    <TextBlock Text="كلمة المرور" Margin="0,0,0,6" Foreground="#4B5A70" FontWeight="SemiBold"/>
                    <PasswordBox x:Name="PasswordBox" Style="{StaticResource LoginPasswordStyle}"/>

                    <TextBlock x:Name="ErrorTextBlock"
                               Foreground="#DC2626"
                               Margin="0,10,0,0"
                               FontSize="13"
                               TextWrapping="Wrap"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,18,0,0">
                        <Button Content="دخول"
                                Width="140"
                                Height="44"
                                Margin="0,0,8,0"
                                Background="#2563EB"
                                Foreground="White"
                                FontWeight="Bold"
                                BorderThickness="0"
                                Cursor="Hand"
                                Click="Login_Click"/>

                        <Button Content="إغلاق"
                                Style="{StaticResource SecondaryActionButton}"
                                Click="Exit_Click"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
