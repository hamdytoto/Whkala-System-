<UserControl x:Class="WhkalaAgency.Desktop.Views.TradersPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             FlowDirection="RightToLeft">

    <UserControl.Resources>
        <Style x:Key="CardBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="14"/>
            <Setter Property="BorderBrush" Value="#E6EBF2"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="18"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="18" Opacity="0.08" ShadowDepth="2" Color="#1E2A3A"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ToolbarButtonStyle" TargetType="Button" BasedOn="{StaticResource SecondaryButton}">
            <Setter Property="Height" Value="44"/>
            <Setter Property="Padding" Value="14,0"/>
            <Setter Property="MinWidth" Value="110"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Background" Value="#F8FAFD"/>
            <Setter Property="BorderBrush" Value="#D7E0EC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#EEF4FB"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#E5EDF8"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="FieldBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="44"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="#FAFCFF"/>
            <Setter Property="BorderBrush" Value="#D8E2EF"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </UserControl.Resources>

    <Grid Background="#F2F6FB" TextOptions.TextRenderingMode="ClearType" RenderOptions.ClearTypeHint="Enabled">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Margin="26,20,26,14" Padding="24,18" CornerRadius="16">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#1E3A8A" Offset="0"/>
                    <GradientStop Color="#1D4ED8" Offset="0.55"/>
                    <GradientStop Color="#2563EB" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                    <TextBlock Text="سجل التجار" FontSize="34" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="إدارة بيانات المشترين (التجار) ومتابعة سقف الائتمان والديون"
                               FontSize="14"
                               Margin="0,6,0,0"
                               Foreground="#D6E4FF"/>
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="1" Style="{StaticResource CardBorderStyle}" Margin="26,0,26,14" Padding="14">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0"
                        Height="44"
                        Width="430"
                        HorizontalAlignment="Left"
                        CornerRadius="10"
                        Background="#FAFCFF"
                        BorderBrush="#D8E2EF"
                        BorderThickness="1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="40"/>
                        </Grid.ColumnDefinitions>

                        <TextBox x:Name="TxtSearch"
                                 Grid.Column="0"
                                 Margin="8,0"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 VerticalContentAlignment="Center"
                                 FontSize="15"
                                 Foreground="#243247"
                                 TextChanged="TxtSearch_TextChanged"
                                 Tag="ابحث باسم التاجر أو رقم الهاتف..."/>

                        <TextBlock Grid.Column="1"
                                   Text="&#xE721;"
                                   FontFamily="Segoe MDL2 Assets"
                                   FontSize="16"
                                   Foreground="#7A8BA4"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"/>
                    </Grid>
                </Border>

                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="BtnAdd"
                            Content="+ تاجر جديد"
                            Cursor="Hand"
                            FontSize="15"
                            FontWeight="Bold"
                            Height="44"
                            Padding="18,0"
                            Margin="0,0,10,0"
                            Click="BtnAdd_Click"
                            Style="{StaticResource PrimaryButton}"/>

                    <Button x:Name="BtnEdit"
                            Content="تعديل"
                            Cursor="Hand"
                            Click="BtnEdit_Click"
                            Margin="0,0,10,0"
                            Style="{StaticResource ToolbarButtonStyle}"/>

                    <Button x:Name="BtnDelete"
                            Content="حذف"
                            Cursor="Hand"
                            Foreground="#C53030"
                            Click="BtnDelete_Click"
                            Style="{StaticResource ToolbarButtonStyle}"/>
                </StackPanel>
            </Grid>
        </Border>

        <Border x:Name="FormPanel"
                Grid.Row="2"
                Visibility="Collapsed"
                Margin="26,0,26,14"
                Style="{StaticResource CardBorderStyle}"
                BorderBrush="#BFDBFE"
                BorderThickness="1">
            <StackPanel>
                <TextBlock Text="تفاصيل بيانات التاجر"
                           FontSize="20"
                           FontWeight="Bold"
                           Margin="0,0,0,16"
                           Foreground="#1F2A3A"/>

                <UniformGrid Columns="4">
                    <StackPanel Margin="0,0,14,0">
                        <TextBlock Text="اسم التاجر" FontSize="13" FontWeight="SemiBold" Margin="0,0,0,8" Foreground="#4B5A70"/>
                        <TextBox x:Name="TxtName" Style="{StaticResource FieldBoxStyle}"/>
                    </StackPanel>

                    <StackPanel Margin="0,0,14,0">
                        <TextBlock Text="رقم الهاتف" FontSize="13" FontWeight="SemiBold" Margin="0,0,0,8" Foreground="#4B5A70"/>
                        <TextBox x:Name="TxtPhone" Style="{StaticResource FieldBoxStyle}"/>
                    </StackPanel>

                    <StackPanel Margin="0,0,14,0">
                        <TextBlock Text="الرصيد الافتتاحي" FontSize="13" FontWeight="SemiBold" Margin="0,0,0,8" Foreground="#4B5A70"/>
                        <TextBox x:Name="TxtBalance" Style="{StaticResource FieldBoxStyle}"/>
                    </StackPanel>

                    <StackPanel>
                        <TextBlock Text="حد الائتمان" FontSize="13" FontWeight="SemiBold" Margin="0,0,0,8" Foreground="#4B5A70"/>
                        <TextBox x:Name="TxtCreditLimit" Style="{StaticResource FieldBoxStyle}"/>
                    </StackPanel>
                </UniformGrid>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,20,0,0">
                    <Button Content="حفظ البيانات"
                            Width="145"
                            Height="44"
                            FontSize="15"
                            FontWeight="Bold"
                            Click="BtnSave_Click"
                            Margin="0,0,10,0"
                            Style="{StaticResource PrimaryButton}"/>

                    <Button Content="إلغاء"
                            Width="96"
                            Height="44"
                            FontSize="15"
                            FontWeight="SemiBold"
                            Click="BtnCancel_Click"
                            Style="{StaticResource ToolbarButtonStyle}"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <Border Grid.Row="3" Margin="26,0,26,22" Style="{StaticResource CardBorderStyle}" Padding="0" ClipToBounds="True">
            <DataGrid x:Name="TradersGrid"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      HeadersVisibility="Column"
                      GridLinesVisibility="None"
                      RowHeight="62"
                      FontSize="15"
                      Background="Transparent"
                      BorderThickness="0"
                      CanUserAddRows="False"
                      SelectionMode="Single"
                      SelectionUnit="FullRow"
                      HorizontalScrollBarVisibility="Disabled"
                      VerticalScrollBarVisibility="Auto">

                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#F7FAFE"/>
                        <Setter Property="Foreground" Value="#42526A"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="FontSize" Value="14"/>
                        <Setter Property="Padding" Value="20,14"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="BorderBrush" Value="#E3EAF3"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>

                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Margin" Value="0"/>
                        <Setter Property="Background" Value="White"/>
                        <Setter Property="BorderBrush" Value="#EEF2F7"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F8FBFF"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#E8F1FF"/>
                                <Setter Property="Foreground" Value="#1D4E89"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>

                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="التاجر" Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="20,0">
                                    <Border Width="34" Height="34" CornerRadius="17" Background="#EAF2FF" Margin="0,0,10,0">
                                        <TextBlock Text="&#xE14C;" FontFamily="Segoe MDL2 Assets" FontSize="14" Foreground="#3667A6"
                                                   VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    </Border>
                                    <TextBlock Text="{Binding Name}" VerticalAlignment="Center" FontWeight="SemiBold" Foreground="#1E2A3A"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTextColumn Header="رقم الهاتف" Binding="{Binding Phone}" Width="180">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Margin" Value="20,0"/>
                                <Setter Property="Foreground" Value="#4A5A70"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTemplateColumn Header="حد الائتمان" Width="170">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding CreditLimit, StringFormat={}{0:N0} ج.م}"
                                           VerticalAlignment="Center"
                                           Foreground="#4A5A70"
                                           Margin="20,0"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Header="الرصيد المستحق" Width="210">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border Background="#FFF1F2" CornerRadius="14" Padding="12,6" HorizontalAlignment="Left" Margin="20,0">
                                    <TextBlock Text="{Binding CurrentBalance, StringFormat={}{0:N2} ج.م}"
                                               FontWeight="Bold" Foreground="#C53030" VerticalAlignment="Center"/>
                                </Border>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</UserControl>
